@model BussinessObject.DTOS.DocTypeMapper
@{
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h1 class="text-center mb-4">Create Document Type</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Document Type Title Input -->
                <div class="form-group mb-3">
                    <label asp-for="TypeName" class="form-label">Document Type Title</label>
                    <input asp-for="TypeName" class="form-control" />
                    <span asp-validation-for="TypeName" class="text-danger"></span>
                </div>

@*                 <!-- Description Input -->
                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div> *@

                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-secondary">Back to list</a>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }

    h1 {
        color: #343a40;
        font-weight: bold;
    }

    .card {
        border-radius: 0.5rem;
    }

    .form-label {
        font-weight: bold;
        color: #495057;
    }

    .btn {
        padding: 0.5rem 1rem;
        font-size: 1rem;
        transition: background-color 0.3s;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>
