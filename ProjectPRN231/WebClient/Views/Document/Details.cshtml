@model BussinessObject.DTOS.DocumentDTO

@{
    ViewData["Title"] = "Document Details";
    Layout = null;
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h1 class="text-center mb-4">Document Details</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title">@Model.Title</h2>
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">Document Type</dt>
                <dd class="col-sm-9">@Model.TypeName</dd>

                <dt class="col-sm-3 fw-bold">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3 fw-bold">File Path</dt>
                <dd class="col-sm-9">@Model.FilePath</dd>

                <dt class="col-sm-3 fw-bold">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>

                <dt class="col-sm-3 fw-bold">Created At</dt>
                <dd class="col-sm-9">
                    @(Model.CreatedAt.HasValue ? Model.CreatedAt.Value.ToString("g") : "N/A")
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Edit" asp-route-id="@Model.DocumentId" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to list</a>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa; /* Light gray background */
        font-family: 'Arial', sans-serif; /* Modern font */
    }

    h1 {
        color: #343a40; /* Darker color for header */
        font-weight: bold; /* Bold header */
    }

    .card {
        border-radius: 0.5rem; /* Rounded corners for the card */
    }

    .card-title {
        color: #007bff; /* Color for the document title */
        font-weight: bold; /* Bold title */
    }

    dt {
        font-weight: bold; /* Bold for description labels */
        color: #495057; /* Dark gray for dt elements */
    }

    dd {
        color: #343a40; /* Darker color for dd elements */
    }

    .btn {
        padding: 0.5rem 1.5rem; /* Button padding for better spacing */
        font-size: 1rem; /* Button font size */
        border-radius: 0.25rem; /* Rounded corners for buttons */
        transition: background-color 0.3s, transform 0.2s; /* Smooth button hover effect */
    }

    .btn-warning {
        background-color: #ffc107; /* Warning button color */
        border: none; /* Remove border */
    }

    .btn-warning:hover {
        background-color: #e0a800; /* Darker shade on hover */
        transform: translateY(-2px); /* Slight lift effect on hover */
    }

    .btn-secondary {
        background-color: #6c757d; /* Secondary button color */
        border: none; /* Remove border */
    }

    .btn-secondary:hover {
        background-color: #5a6268; /* Darker shade on hover */
        transform: translateY(-2px); /* Slight lift effect on hover */
    }

   
</style>
