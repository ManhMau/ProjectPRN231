@model BusinessObject.DTO.GroupMemberDTO
@{
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h1 class="text-center mb-4">Group Member Details</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="text-center">Group Member Information</h4>
            <hr />
            <dl class="row mt-4">
                <!-- Group Member ID -->
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <!-- Group Name -->
                <dt class="col-sm-3">Group Name</dt>
                <dd class="col-sm-9">@Model.NameGroup</dd>

                <!-- Status -->
                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@(Model.IsActive ? "Active" : "Inactive")</dd>

                <!-- Note -->
                <dt class="col-sm-3">Note</dt>
                <dd class="col-sm-9">@Model.Note</dd>
            </dl>

            <div class="text-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>

</div>

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }

    h1 {
        font-weight: bold;
        color: #343a40;
    }

    .card {
        border-radius: 0.5rem;
        padding: 20px;
    }

    .form-label {
        font-weight: bold;
    }

    .btn {
        padding: 0.5rem 1rem;
        font-size: 1rem;
        transition: background-color 0.3s;
    }

    .btn-warning {
        background-color: #ffc107;
        border: none;
    }

        .btn-warning:hover {
            background-color: #e0a800;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    dl {
        margin-bottom: 0;
    }

    dt {
        font-weight: bold;
        color: #495057;
    }

    dd {
        margin-bottom: 1rem;
    }
</style>
