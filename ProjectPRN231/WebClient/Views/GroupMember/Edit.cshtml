@model BusinessObject.DTO.GroupMemberDTO
@{
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">


<div class="container mt-5">
    <h1 class="text-center mb-4">Edit Group Member</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Group Name Input -->
                <div class="form-group mb-3">
                    <label asp-for="NameGroup" class="form-label">Group Name</label>
                    <input asp-for="NameGroup" class="form-control" />
                    <span asp-validation-for="NameGroup" class="text-danger"></span>
                </div>

                <!-- IsActive Input -->
                <div class="form-group mb-3">
                    <label asp-for="IsActive" class="form-label">Status</label>
                    <select asp-for="IsActive" class="form-control">
                        <option value="true">Active</option>
                        <option value="false">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>

                <!-- Note Input -->
                <div class="form-group mb-3">
                    <label asp-for="Note" class="form-label">Note</label>
                    <textarea asp-for="Note" class="form-control"></textarea>
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </form>
        </div>
    </div>

</div>

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }

    h1 {
        color: #343a40;
        font-weight: bold;
    }

    .card {
        border-radius: 0.5rem;
        padding: 20px;
    }

    .form-label {
        font-weight: bold;
        color: #495057;
    }

    .btn {
        padding: 0.5rem 1rem;
        font-size: 1rem;
        transition: background-color 0.3s;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
